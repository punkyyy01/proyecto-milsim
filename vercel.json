{
  "version": 2,
  "regions": ["gru1"],
  "builds": [
    {
      "src": "staticfiles/**",
      "use": "@vercel/static"
    },
    {
      "src": "gestion_milsim/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.12"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "staticfiles/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/_vercel/insights/(.*)",
      "dest": "/_vercel/insights/$1"
    },
    {
      "src": "/(.*)",
      "dest": "gestion_milsim/wsgi.py"
    }
  ]
}
