# =============================================================
# Variables de entorno - Proyecto Milsim
# =============================================================

# --- Django core ---
DJANGO_SECRET_KEY=change-me-very-secret
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# --- Base de datos ---
# Docker local: postgres://milsim:milsimpass@db:5432/milsimdb
# Local sin Docker: (dejar vacío para usar SQLite)
# Producción / Vercel: usar Neon PostgreSQL (ver sección Vercel abajo)
DATABASE_URL=postgres://milsim:milsimpass@db:5432/milsimdb

# SSL para la conexión a BD (True solo en producción con proveedor externo)
DJANGO_DB_SSL_REQUIRE=False

# PostgreSQL (usado por docker-compose para crear la BD)
POSTGRES_USER=milsim
POSTGRES_PASSWORD=milsimpass
POSTGRES_DB=milsimdb

# --- Seguridad (producción) ---
# En desarrollo local con Docker, dejar todo en False
DJANGO_SECURE_MODE=False
DJANGO_SECURE_SSL_REDIRECT=False
DJANGO_SESSION_COOKIE_SECURE=False
DJANGO_CSRF_COOKIE_SECURE=False
DJANGO_SESSION_COOKIE_HTTPONLY=True
DJANGO_CSRF_COOKIE_HTTPONLY=True
DJANGO_SESSION_COOKIE_SAMESITE=Lax
DJANGO_CSRF_COOKIE_SAMESITE=Lax
DJANGO_SECURE_HSTS_SECONDS=0
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=True
DJANGO_SECURE_HSTS_PRELOAD=False
DJANGO_SECURE_REFERRER_POLICY=same-origin
DJANGO_X_FRAME_OPTIONS=DENY

# =============================================================
# VARIABLES PARA VERCEL (configurar en Vercel Dashboard)
# =============================================================
# DJANGO_SECRET_KEY=<clave-segura-generada>
# DJANGO_DEBUG=False
# DATABASE_URL=postgres://user:pass@host.neon.tech/neondb?sslmode=require
# DJANGO_DB_SSL_REQUIRE=True
# DJANGO_ALLOWED_HOSTS=tu-proyecto.vercel.app
# DJANGO_CSRF_TRUSTED_ORIGINS=https://tu-proyecto.vercel.app
